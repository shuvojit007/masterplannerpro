<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.CountdownSetActivity">


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:elevation="@dimen/dimen_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <EditText
                android:id="@+id/etCountdownTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:hint="Countdown Title"
                android:textColor="@color/textColorBlack"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tvCountdownDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etCountdownTitle"
                android:layout_marginTop="10dp"
                android:hint="Tap to set countdown date..."
                android:textColor="@color/textColorBlack"
                android:textSize="14sp"

                />

            <Button
                android:id="@+id/btnEnableCountdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCountdownDate"
                android:layout_marginTop="16dp"
                android:text="Enable Countdown"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>