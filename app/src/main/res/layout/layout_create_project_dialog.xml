<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginLeft="3dp"
        android:layout_width="match_parent"
        android:padding="3dp"
        android:background="@drawable/dialog_title_bar"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="28dp"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/open_in_new"
            android:layout_height="28dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Create Project"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <EditText
                android:layout_alignParentTop="true"
                android:id="@+id/etProjectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Project Name"
                android:inputType="textAutoCorrect|text"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                />
<!--
            <EditText
                android:id="@+id/etCardCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_below="@+id/etProjectName"
                android:hint="Total Cards (Maximum 10 cards allowed.)"
                android:inputType="number"
                />-->

            <Button
                android:id="@+id/btnSaveProject"
                android:layout_width="140dp"
                android:layout_height="36dp"
                android:background="@drawable/button_save"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/text_color_white_lite"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/etProjectName"
                android:layout_marginTop="10dp"
                android:text="Create"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>





</LinearLayout>