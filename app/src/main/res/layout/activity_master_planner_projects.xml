<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMasterPlannerProject"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activities.MasterPlannerProjectsActivity">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/master_planner_projets_toolbar"
        app:theme="@style/ToolbarColoredBackArrow"
        android:elevation="15dp"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/action_bar_gradient">


    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tvPrjectMsg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your project list is empty.\nLet's create a project."
        android:gravity="center"
        android:padding="@dimen/dimen_10"
        android:textSize="18sp"
        android:lineSpacingExtra="@dimen/dimen_10"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvProjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            />



    </RelativeLayout>
</LinearLayout>